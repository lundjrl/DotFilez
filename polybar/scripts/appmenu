MENU="$(rofi -sep "|" -dmenu -i -p 'Games' -location 5 -xoffset -320 -yoffset -40 -width 10 -hide-scrollbar -line-padding 4 -padding 20 -lines 7 <<< "> Steam|> Discord|> Lutris|> Dolphin|> WineCfg|> Pavucontrol|> Bluetooth")"
            case "$MENU" in
                *Steam) exec steam &;;
                *Discord) exec ~/Downloads/Discord/./Discord &;;
                *Lutris) exec lutris &;;
		            *Dolphin) exec dolphin-emu &;;
                *Nvidia) exec nvidia-settings &;;
                *WineCfg) exec winecfg &;;
                *Pavucontrol) exec pavucontrol &;;
                *Bluetooth) exec blueman-applet | blueman-manager &;;
            esac
